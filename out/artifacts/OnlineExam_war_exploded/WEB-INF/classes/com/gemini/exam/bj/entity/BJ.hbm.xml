<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 <hibernate-mapping>
 	<class name="com.gemini.exam.bj.entity.BJ" table="bj">
 		<id name="bjid" column="bjid">
 			<generator class="native"/>
 		</id>
 		<property name="bjname" column="bjname"/>
 		<!-- 教师与班级的关联 -->
 		<many-to-one name="teacher" class="com.gemini.exam.teacheruser.entity.Teacher" column="tid"></many-to-one>
 		<!-- 班级与学生关联 -->
 		<set name="students" lazy="false" cascade="save-update,delete">
 			<key column="bjid"></key>
 			<one-to-many class="com.gemini.exam.student.entity.Students"/>
 		</set>
 	</class>
 </hibernate-mapping>
